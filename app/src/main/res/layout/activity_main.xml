<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context="com.bostonkoseninsandwiches.weatherapp.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <EditText
            android:id="@+id/input_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8" />

        <ImageButton
            android:id="@+id/refresh_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_update" />

        <ImageButton
            android:id="@+id/settings_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_settings" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="8dp">

        <TextView
            android:id="@+id/day_today"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/today_weather_picture"
            android:layout_weight="1"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/today_weather_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_weight="5"
            android:src="@drawable/weather3"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/temp_today"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/day_today"
            android:layout_toLeftOf="@+id/today_weather_picture"
            android:layout_weight="1"
            android:textSize="16sp"

            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/humidity_fixedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Абсолютная влажность воздуха "
            android:textSize="16sp" />

        <TextView
            android:id="@+id/humidity_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/pressure_fixedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Атмосферное давление "
            android:textSize="16sp" />

        <TextView
            android:id="@+id/pressure_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"

            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/windSpeed_fixedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Скорость ветра "
            android:textSize="16sp" />

        <TextView
            android:id="@+id/windSpeed_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"

            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/description_fixedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:text="Сегодня "
            android:textSize="16sp" />

        <TextView
            android:id="@+id/description_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"

            />


    </LinearLayout>

    <TextView
        android:id="@+id/buton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
